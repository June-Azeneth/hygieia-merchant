<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".pages.rewards.AddRewardFragment">

    <include
        android:id="@+id/header"
        layout="@layout/custom_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/medium"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/photoPicker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/XXL"
                android:background="@drawable/dotted_container">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/large"
                    android:layout_centerVertical="true"
                    android:src="@drawable/outline_add_photo_alternate_24" />
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/prod_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:fontFamily="@font/nunito_sans_regular"
                android:hint="Product Name"
                android:textColorHint="@color/main_green"
                tools:layout_editor_absoluteX="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_round_container"
                    android:drawablePadding="7dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/store_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tiniest"
                android:fontFamily="@font/nunito_sans_regular"
                android:hint="Store Price"
                android:textColorHint="@color/main_green"
                tools:layout_editor_absoluteX="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_round_container"
                    android:drawablePadding="7dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tiniest"
                android:fontFamily="@font/nunito_sans_regular"
                android:hint="Discount Rate"
                android:textColorHint="@color/main_green"
                tools:layout_editor_absoluteX="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/discount_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_round_container"
                    android:drawablePadding="7dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tiniest"
                android:fontFamily="@font/nunito_sans_regular"
                android:hint="Points Required"
                android:textColorHint="@color/main_green"
                tools:layout_editor_absoluteX="25dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/points_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_round_container"
                    android:drawablePadding="7dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/header"
                android:layout_marginTop="@dimen/small"
                android:background="@drawable/buttons"
                android:paddingStart="@dimen/small" />

            <TextView
                android:id="@+id/disc_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:fontFamily="@font/nunito_sans_regular"
                android:text="Discounted Price: "
                android:textSize="@dimen/small"
                android:textColor="@color/text_color" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addReward"
                android:layout_width="match_parent"
                android:layout_height="@dimen/large"
                android:layout_below="@id/spinner"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="@dimen/large"
                android:layout_marginTop="@dimen/large"
                android:layout_marginBottom="@dimen/small"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/nunito_sans_regular"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>